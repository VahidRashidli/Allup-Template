@model CategoryIndexViewModel
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Parent Categories</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Created Date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model.ParentCategories)
                        {
                        <tr>
                            <td class="py-1">
                                <img src="~/assets/images/@category.Image" alt="image" />
                            </td>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                @category.CreatedDate.ToString("dd/MM/yyyy")
                            </td> 
                            <td>
                                <a asp-action="Detail" class="btn btn-warning" asp-route-id="@category.Id">Details</a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@category.Id">Delete</a>
                                <a asp-action="Update" class="btn btn-danger" asp-route-id="@category.Id">Update</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@if (Model.ChildCategories.Count>0)
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Child Categories</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                Created Date
                                </th>
                                <th>Parent</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model.ChildCategories)
                            {
                            <tr>
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    @category.CreatedDate.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @category.Parent.Name
                                </td>
                                <td>
                                    <a asp-action="Detail" class="btn btn-warning" asp-route-id="@category.Id">Details</a>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@category.Id">Delete</a>
                                    <a asp-action="Update" class="btn btn-danger" asp-route-id="@category.Id">Update</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}