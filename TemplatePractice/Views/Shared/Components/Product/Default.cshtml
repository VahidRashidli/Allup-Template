@model List<Product>
<div class="row" id="product">
    @foreach (Product product in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
            <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                <div class="img">
                    <a href="">
                        <img src="~/img/@product.ImageName" class="img-fluid" alt="">
                    </a>
                </div>
                <div class="title mt-3">
                    <h6>@product.Name</h6>
                </div>
                <div class="price">
                    <span class="text-black-50 addBasket" data-id="@product.Id">Add to cart</span>
                    <span class="text-black-50">$@product.Price</span>
                </div>
            </div>
        </div>
    }


</div>